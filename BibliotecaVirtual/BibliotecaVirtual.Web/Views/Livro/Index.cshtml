@model IEnumerable<BibliotecaVirtual.Controllers.LivroController.ObjetoRetorno>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Livros</h2>

<p>
    @Html.ActionLink("Novo Livro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Editora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edicao)
        </th>
        <th>
            Ano
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            Autor(es)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Titulo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Editora)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Edicao)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AnoPublicacao)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Valor)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Autores)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
        @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
